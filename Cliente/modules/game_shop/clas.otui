      id: Text_desc
      size: 386 58
      image-source: images/clas/texts/gaia
      anchors.top: parent.top
      anchors.left: parent.left
      margin-top: 15
    UIWidget
      id: Desc_Types
      size: 99 16
      image-source: images/clas/texts/type_dominance
      anchors.top: Text_desc.bottom
      anchors.centerIn: parent
      margin-top: 15

    UIWidget
      id: Type_Solo
      size: 20 21
      visible: false
      anchors.top: Desc_Types.bottom
      anchors.centerIn: parent
      margin-top: 37
      opacity: 0.8
      $hover:
        opacity: 1
    UIWidget
      id: Type_First
      size: 20 21
      visible: false
      anchors.top: Desc_Types.bottom
      anchors.centerIn: parent
      margin-top: 37
      margin-left: -10
      opacity: 0.8
      $hover:
        opacity: 1
    UIWidget
      id: Type_Second
      size: 20 21
      visible: false
      anchors.top: Type_First.top
      anchors.left: Type_First.right
      margin-left: 5
      opacity: 0.8
      $hover:
        opacity: 1

  UIWidget
    id: SmallWindow_First
    size: 180 150
    image-source: images/clas/SmallWindow
    anchors.bottom: Background.bottom
    anchors.left: Background.right
    margin-bottom: 1
    margin-left: 32
    $hover:
      image-source: images/clas/SmallWindow_hover
    $pressed:
      image-source: images/clas/SmallWindow_presed
    UIWidget
      id: Cla_icon
      size: 38 38
      phantom: true
      image-source: images/clas/icons/gaia
      anchors.top: parent.top
      anchors.centerIn: parent
      margin-top: -40
    UIWidget
      id: Cla_RankName
      size: 179 15
