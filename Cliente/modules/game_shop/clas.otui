PanelSelectedClas < UIWidget
  id: PanelSelectedClas
  size: 720 470
  padding: 0
  visible: false
  anchors.left: parent.left
  anchors.bottom: parent.bottom
  margin-left: 22
  margin-bottom: 17
  UIWidget
    id: Background
    size: 137 322
    image-source: images/clas/background/selected/gaia
    anchors.top: parent.top
    anchors.left: parent.left
    margin-top: 60
    margin-left: 70
  UIWidget
    id: BigWindow
    size: 386 124
