    margin-left: -55

  DepotComboBox
    id: world
    !text: tr('World')
    size: 156 21
    anchors.top: parent.top
    anchors.right: parent.right
    margin-right: 24
    margin-top: 141
  UIWidget
    id: Name
    size: 150 25
    !text: tr('Mundo')
    font: damas
    anchors.top: prev.top
    anchors.left: prev.left
