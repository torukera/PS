    margin-left: -55

  UIButton
    size: 81 23
    image-source: images/voltar
    anchors.bottom: parent.bottom
    anchors.right: parent.right
    margin-bottom: 25
    margin-right: 19
    opacity: 0.8
    @onClick: hide()

    $hover:
      opacity: 1

    $pressed:
      opacity: 0.9

  CircleCheckBox
    id: checkbox
    anchors.bottom: parent.bottom
    anchors.right: parent.right
    margin-bottom: 160
    margin-right: 320
    @onCheckChange: self:getParent():getChildById('RegisterAccount'):setEnabled(self:isChecked())

  UIButton
    anchors.top: checkbox.top
    anchors.left: checkbox.right
    image-source: images/regras
    size: 275 17
    margin-top: 2
    margin-left: 10
    image-clip: 0 0 275 17
    @onClick: regras()

    $hover:
      image-clip: 0 17 275 17

    $pressed:
      image-clip: 0 34 275 17

  UIButton
    id: RegisterAccount
    size: 104 23
    enabled: false
    image-source: images/criar_conta
    anchors.bottom: parent.bottom
    anchors.right: parent.right
    margin-bottom: 25
    margin-right: 105
    opacity: 0.8
    @onClick: doRegisterAccount()
    $hover:
      opacity: 1
    $pressed:
      opacity: 0.9