EnterGameWindow < HeadlessWindow
  anchors.centerIn: parent
  size: 756 413
  margin-top: 70
  image-source: images/background
  padding: 0
  draggable: false

EnterGameWindow
  id: createAcc
  anchors.centerIn: parent
  padding: 0
  draggable: false
  &save: true
  @onEscape: hide()
  MenuLabel
    anchors.left: parent.left
    anchors.top: parent.top
    text-auto-resize: true

  TextEdit
    id: accountNameTextEdit
    size: 309 25
    image-source: images/textEdit
    anchors.left: parent.left
    anchors.top: parent.top
    margin-top: 93
    margin-left: 45
    text-offset: 5 5
    text-align: left
    color: white
    font: damas
  UIWidget
    id: IconAccountName
    size: 25 25
    image-source: images/icon_textEdit/login
    anchors.top: prev.top
    anchors.left: prev.left
    margin-top: 0
    margin-left: -23
  UIWidget
    id: Name
    size: 100 25
    !text: tr('Conta')
    font: damas
    anchors.top: prev.top
    anchors.left: prev.left
    margin-top: -20
    margin-left: -32

  TextEdit
    id: accountEmailTextEdit
    size: 309 25
    image-source: images/textEdit
    anchors.left: parent.left
    anchors.top: prev.bottom
    margin-top: 45
    margin-left: 45
    text-offset: 5 5
    text-align: left
    color: white
    font: damas
  UIWidget
    id: IconAccountName
    size: 25 25
    image-source: images/icon_textEdit/email
    anchors.top: prev.top
    anchors.left: prev.left
    margin-top: 0
    margin-left: -23
  UIWidget
    id: Name
    size: 100 25
    !text: tr('E-Mail')
    font: damas
    anchors.top: prev.top
    anchors.left: prev.left
    margin-top: -20
    margin-left: -32

  PasswordTextEdit
    id: accountPasswordTextEdit
    size: 309 25
    image-source: images/textEdit
    anchors.left: parent.left
    anchors.top: prev.bottom
    margin-top: 45
    margin-left: 45
    text-offset: 5 5
    text-align: left
    color: white
    font: damas
  UIWidget
    id: IconAccountName
    size: 25 25
    image-source: images/icon_textEdit/password
    anchors.top: prev.top
    anchors.left: prev.left
    margin-top: 0
    margin-left: -23
  UIWidget
    id: Name
    size: 100 25
    !text: tr('Senha')
    font: damas
    anchors.top: prev.top
    anchors.left: prev.left
    margin-top: -20
    margin-left: -32

