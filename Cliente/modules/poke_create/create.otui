    anchors.left: prev.left
    margin-top: -20
    margin-left: -8

  DepotComboBox
    id: pokemon
    !text: tr('Pokemon')
    size: 156 21
    anchors.top: parent.top
    anchors.right: parent.right
    margin-right: 201
    margin-top: 185
  UIWidget
    id: Name
    size: 150 25
    !text: tr('Pokémon')
    font: damas
    anchors.top: prev.top
    anchors.left: prev.left
    margin-top: -20
    margin-left: -47

  DepotComboBox
    id: sexo
    !text: tr('Sexo')
    size: 156 21
    anchors.top: parent.top
    anchors.right: parent.right
    margin-right: 24
    margin-top: 185
  UIWidget
    id: Name
    size: 150 25
