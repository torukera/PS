    margin-top: 45
    margin-left: 45
    text-offset: 5 5
    text-align: left
    color: white
    font: damas
  UIWidget
    id: IconAccountName
    size: 25 25
    image-source: images/icon_textEdit/repeat_pass
    anchors.top: prev.top
    anchors.left: prev.left
    margin-top: 0
    margin-left: -23
  UIWidget
    id: Name
    size: 100 25
    !text: tr('Repetir Senha')
    font: damas
    anchors.top: prev.top
    anchors.left: prev.left
    margin-top: -20
    margin-left: -8

  TextEdit
    id: accountCharacterNameTextEdit
    size: 309 25
    image-source: images/textEdit
    anchors.right: parent.right
    anchors.top: parent.top
    margin-top: 93
    margin-right: 25
